@model IEnumerable<ABCRetailers.Models.Product>

@{
    ViewData["Title"] = "Products";
    bool isCustomer = User.IsInRole("Customer");
    bool isAdmin = User.IsInRole("Admin");
}

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">
            <i class="fas fa-box text-primary me-2"></i> Products
        </h2>

        @if (isAdmin)
        {
            <a asp-action="Create" asp-controller="Product" class="btn btn-primary shadow-sm">
                <i class="fas fa-plus me-2"></i> Add New Product
            </a>
        }
    </div>

    <!-- Success / Error -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">

            @foreach (var p in Model)
            {
                var stock = p?.StockAvailable ?? 0;
                var stockColor = stock > 10 ? "text-success" : stock > 0 ? "text-warning" : "text-danger";
                var shortId = !string.IsNullOrWhiteSpace(p?.Id)
                ? (p.Id.Length > 8 ? p.Id.Substring(0, 8) + "…" : p.Id)
                : "-";

                <div class="col">
                    <div class="card h-100 shadow-sm border-0">

                        <!-- IMAGE -->
                        <div class="card-img-top bg-light d-flex justify-content-center align-items-center"
                             style="height: 180px;">
                            @if (!string.IsNullOrWhiteSpace(p?.ImageUrl))
                            {
                                <img src="@p.ImageUrl"
                                     alt="@p.ProductName"
                                     class="img-fluid rounded"
                                     style="max-height: 160px; object-fit: cover;">
                            }
                            else
                            {
                                <i class="fas fa-image fa-3x text-secondary"></i>
                            }
                        </div>

                        <div class="card-body">
                            <h5 class="card-title fw-semibold text-dark">@p?.ProductName</h5>

                            <p class="card-text mb-2"><small>ID:</small> <code>@shortId</code></p>

                            <p class="card-text mb-2">
                                <span class="@stockColor fw-bold">
                                    Stock: @stock
                                </span>
                            </p>

                            <p class="card-text fw-bold text-primary">
                                Price: @p?.Price.ToString("C")
                                @if ((p?.Price ?? 0m) <= 0m)
                                {
                                    <br />
                        
                                    <small class="text-danger">⚠ Price not set</small>
                                }
                            </p>
                        </div>

                        <div class="card-footer bg-white border-0">
                            <div class="d-flex justify-content-between">

                                <!-- ADMIN ACTIONS -->
                                @if (isAdmin)
                                {
                                    <a asp-action="Edit" asp-route-id="@p.Id"
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <button type="button"
                                            class="btn btn-outline-danger btn-sm"
                                            onclick="confirmDelete('@p.Id', '@p.ProductName')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                }

                                <!-- CUSTOMER ACTIONS -->
                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <a asp-controller="Login" asp-action="Index"
                                       class="btn btn-primary btn-sm">
                                        <i class="fas fa-sign-in-alt"></i> Login to Add
                                    </a>
                                }
                                else if (isCustomer && stock > 0)
                                {
                                    <a asp-controller="Cart" asp-action="Add" asp-route-productId="@p.Id"
                                       class="btn btn-success btn-sm">
                                        <i class="fas fa-cart-plus"></i> Add to Cart
                                    </a>
                                }
                                else if (isCustomer && stock <= 0)
                                {
                                    <button class="btn btn-secondary btn-sm" disabled>
                                        <i class="fas fa-times-circle"></i> Out of Stock
                                    </button>
                                }

                            </div>
                        </div>

                    </div>
                </div>
            }

        </div>
    }
    else
    {
        <div class="alert alert-info border-0 shadow-sm mt-4">
            <i class="fas fa-info-circle"></i> No products found.
            @if (isAdmin)
            {
                <a asp-action="Create" class="alert-link">Add your first product</a>
                
                    }
        </div>
    }
</div>

<!-- DELETE MODAL -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                Are you sure you want to delete <strong id="productName"></strong>?
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                <form id="deleteForm" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(productId, productName) {
            document.getElementById("productName").textContent = productName || "";

            var deleteUrl = "@Url.Action("Delete", "Product")";
            document.getElementById("deleteForm").action = deleteUrl + "/" + productId;

            new bootstrap.Modal(document.getElementById("deleteModal")).show();
        }
    </script>
}
